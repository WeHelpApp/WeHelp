<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wehelp.wehelp.tabs.tabs_register.FragmentPersonRegister">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/poor_people"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:background="#b6000000"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nome da ONG"
                android:textColor="#ffffff"
                android:id="@+id/textView14" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/editText5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:text="CNPJ"
                android:id="@+id/textView15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/editText6"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="E-mail"
                android:id="@+id/textView16" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editText7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Telefone"
                android:id="@+id/text_phone" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/input_phone"
                android:inputType="text|phone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nacionalidade"
                android:id="@+id/text_nationality" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/input_nationality"
                android:inputType="text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="UF"
                android:id="@+id/text_UF" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/input_UF"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cidade"
                android:id="@+id/text_city" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:theme="@style/AppTheme"
                android:touchscreenBlocksFocus="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rua"
                android:id="@+id/text_street" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"

                android:id="@+id/input_street"
                android:inputType="text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Numero"
                android:id="@+id/text_number" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"

                android:id="@+id/input_number"
                android:inputType="text|number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Complemento"
                android:id="@+id/text_complement" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"

                android:id="@+id/input_complement"
                android:inputType="text|number" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nome responsável"
                android:id="@+id/text_responsable" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"

                android:id="@+id/input_responsable"
                android:inputType="textPersonName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CPF responsável"
                android:id="@+id/text_cpf" />

            <EditText
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"

                android:id="@+id/input_cpf"
                android:inputType="text|number" />

            <RadioGroup
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gênero"
                    android:id="@+id/textView17" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"
                    android:text="Feminino"
                    android:id="@+id/radioButton"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Masculino"
                    android:id="@+id/radioButton2"
                    android:checked="false" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CADASTRAR"
                    android:id="@+id/button4"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="40dp"
                    android:paddingRight="10dp" />
            </RadioGroup>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
